{
  "name": "Platinum Dictionary",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "author": "Jinkai Platinum Team",
  "version": "1.0.0",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab", "contextMenus", "*://*.virustotal.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Platinum Dictionary"
  },
  "commands": {
    "_execute_browser_action": {
      "description": "Activate the extension"
    }
  },
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": ["data/*.json", "analysis/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
